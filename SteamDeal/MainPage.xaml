<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:SteamDeal.ViewModels"
             xmlns:views="clr-namespace:SteamDeal.Views"
             x:Class="SteamDeal.MainPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <ContentPage.BindingContext>
        <viewmodels:MainViewModel x:Name="ViewModel" />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="12">
            <Grid Padding="12" BackgroundColor="{DynamicResource PageBackgroundColor}" ColumnSpacing="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <ImageButton 
                    Source="hamburger_menu.png"
                    HeightRequest="28"
                    BackgroundColor="Transparent"
                    VerticalOptions="Center"
                    Clicked="OnHamburgerClicked"
                    Grid.Column="0" />

                <ImageButton
                    Source="steam_logo.png"
                    HeightRequest="32"
                    HorizontalOptions="Center"
                    BackgroundColor="Transparent"
                    VerticalOptions="Center"
                    Grid.Column="1" />
                
                <ImageButton 
                    Source="user_icon.png"
                    HeightRequest="32"
                    BackgroundColor="Transparent"
                    HorizontalOptions="End"
                    VerticalOptions="Center"
                    Grid.Column="2" />
            </Grid>
            
            <Label 
                Text="Featured Games and Deals"
                FontSize="24"
                FontAttributes="Bold"
                TextColor="{DynamicResource TextColorPrimary}" />

            <CollectionView ItemsSource="{Binding TopDeals}">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="2" />
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="0" HasShadow="False" BackgroundColor="Transparent">
                            <Grid>
                                <views:GameCard />

                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer
                    Command="{Binding Source={x:Reference ViewModel}, Path=GameSelectedCommand}"
                    CommandParameter="{Binding .}" />
                                </Grid.GestureRecognizers>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
