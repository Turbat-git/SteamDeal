<?xml version = "1.0" encoding = "UTF-8" ?>
<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SteamDeal.Views.GameCard"
    xmlns:local="clr-namespace:SteamDeal"
    x:Name="RootView">

    <ContentView.GestureRecognizers>
        <TapGestureRecognizer
        Command="{Binding BindingContext.GameSelectedCommand, Source={RelativeSource AncestorType={x:Type local:MainPage}}}"
        CommandParameter="{Binding .}" />
    </ContentView.GestureRecognizers>
    
    <Frame 
        Padding="0"
        Margin="6"
        CornerRadius="10"
        BackgroundColor="{DynamicResource FrameBackgroundColor}"
        BorderColor="#3A3A3A"
        HasShadow="True"
        HeightRequest="{Binding CardHeight}"
        WidthRequest="{Binding CardWidth}">

        <Grid>
            <Image Source="{Binding Thumb}" Aspect="AspectFill" />

            <!-- Dark overlay gradient -->
            <BoxView 
                BackgroundColor="#80000000" 
                VerticalOptions="End"
                HeightRequest="50"
                Opacity="0.5"
                CornerRadius="0"
                />

            <!-- Text and price block -->
            <StackLayout 
                Padding="6"
                VerticalOptions="End"
                Spacing="2"
                BackgroundColor="Transparent">

                <Label 
                    Text="{Binding Title}"
                    FontSize="14"
                    TextColor="{StaticResource White}"
                    LineBreakMode="TailTruncation" />

                <StackLayout Orientation="Horizontal" Spacing="4">
                    <Label 
                        Text="{Binding SalePrice, StringFormat='${0}'}"
                        FontAttributes="Bold"
                        TextColor="#90EE90"
                        FontSize="12" />

                    <Label 
                        Text="{Binding NormalPrice, StringFormat='${0}'}"
                        TextDecorations="Strikethrough"
                        TextColor="{StaticResource White}"
                        FontSize="12" />

                    <Label 
                        Text="{Binding SavingsPercent, StringFormat='-{0}%'}"
                        TextColor="#FFA500"
                        FontSize="12" />
                </StackLayout>
            </StackLayout>
        </Grid>
    </Frame>
</ContentView>