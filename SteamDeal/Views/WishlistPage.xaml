<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="SteamDeal.Views.WishlistPage"
    Title="Wishlist"
    BackgroundColor="#121212">

    <VerticalStackLayout Padding="16">

		<Grid Padding="12" BackgroundColor="#232730" ColumnSpacing="10">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="Auto" />
			</Grid.ColumnDefinitions>

			<ImageButton
                Source="hamburger_menu.png"
                HeightRequest="28"
                BackgroundColor="Transparent"
                VerticalOptions="Center"
				Clicked="OnHamburgerClicked"
                Grid.Column="0" />

			<ImageButton
                Source="steam_logo.png"
                HeightRequest="32"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Grid.Column="1"
                Clicked="OnSteamLogoClicked" />

			<ImageButton
                Source="user_icon.png"
                HeightRequest="32"
                BackgroundColor="Transparent"
                HorizontalOptions="End"
                VerticalOptions="Center"
                Grid.Column="2" />
		</Grid>
		
        <Label Text="Your Wishlist" 
               FontSize="24" 
               FontAttributes="Bold" 
               TextColor="White" 
               Margin="0,10" />

        <Label Text="(Wishlist feature coming soon...)" 
               FontSize="14"
               TextColor="Gray" />
    </VerticalStackLayout>
</ContentPage>