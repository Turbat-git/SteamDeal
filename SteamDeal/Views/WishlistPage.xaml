<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    xmlns:views="clr-namespace:SteamDeal.Views"
    x:Class="SteamDeal.Views.WishlistPage"
    Title="Wishlist"
    BackgroundColor="{DynamicResource PageBackgroundColor}">

    <Shell.TitleView>
        <Grid ColumnDefinitions="Auto,*,Auto" Padding="10" VerticalOptions="Center">
            <BoxView WidthRequest="24" HeightRequest="1" Grid.Column="0" IsVisible="False" />

            <ImageButton
                Source="steam_logo.png"
                HeightRequest="28"
                BackgroundColor="Transparent"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Clicked="OnSteamLogoClicked"
                Grid.Column="1" />

            <ImageButton
                Source="user_icon.png"
                HeightRequest="28"
                WidthRequest="28"
                BackgroundColor="Transparent"
                HorizontalOptions="End"
                VerticalOptions="Center"
                Grid.Column="2" />
        </Grid>
    </Shell.TitleView>

    <Grid>
        <!-- Main content when there are items -->
        <ScrollView IsVisible="{Binding HasItems}">
            <VerticalStackLayout Padding="16" Spacing="12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Label 
                        Text="Your Wishlist" 
                        FontSize="24" 
                        FontAttributes="Bold"
                        TextColor="{DynamicResource TextColorPrimary}" 
                        VerticalOptions="Center"
                        Grid.Column="0" />

                    <Button 
                        Text="Clear All"
                        BackgroundColor="#FF6B6B"
                        TextColor="White"
                        FontSize="12"
                        Padding="12,6"
                        CornerRadius="6"
                        Command="{Binding ClearWishlistCommand}"
                        Grid.Column="1" />
                </Grid>

                <CollectionView ItemsSource="{Binding WishlistGames}">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Vertical" ItemSpacing="8" />
                    </CollectionView.ItemsLayout>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <SwipeView>
                                <SwipeView.RightItems>
                                    <SwipeItems>
                                        <SwipeItem 
                                            Text="Remove"
                                            BackgroundColor="#FF6B6B"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.RemoveFromWishlistCommand}"
                                            CommandParameter="{Binding .}" />
                                    </SwipeItems>
                                </SwipeView.RightItems>

                                <Frame 
                                    Padding="0"
                                    Margin="6"
                                    CornerRadius="10"
                                    BackgroundColor="{DynamicResource FrameBackgroundColor}"
                                    BorderColor="#3A3A3A"
                                    HasShadow="True">

                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.GameSelectedCommand}"
                                            CommandParameter="{Binding .}" />
                                    </Frame.GestureRecognizers>

                                    <Grid Padding="12" ColumnSpacing="12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="80" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <Image 
                                            Source="{Binding Thumb}" 
                                            Aspect="AspectFill" 
                                            WidthRequest="80"
                                            HeightRequest="60"
                                            Grid.Column="0" />

                                        <StackLayout Grid.Column="1" VerticalOptions="Center" Spacing="4">
                                            <Label 
                                                Text="{Binding Title}"
                                                FontSize="16"
                                                FontAttributes="Bold"
                                                TextColor="{DynamicResource TextColorPrimary}"
                                                LineBreakMode="TailTruncation" />

                                            <StackLayout Orientation="Horizontal" Spacing="8">
                                                <Label 
                                                    Text="{Binding SalePrice, StringFormat='${0}'}"
                                                    FontSize="14"
                                                    FontAttributes="Bold"
                                                    TextColor="#90EE90" />

                                                <Label 
                                                    Text="{Binding NormalPrice, StringFormat='${0}'}"
                                                    FontSize="12"
                                                    TextDecorations="Strikethrough"
                                                    TextColor="{DynamicResource TextColorSecondary}" />

                                                <Label 
                                                    Text="{Binding Savings, StringFormat='-{0}%'}"
                                                    FontSize="12"
                                                    TextColor="#FFA500" />
                                            </StackLayout>
                                        </StackLayout>

                                        <Button 
                                            Text="Remove"
                                            BackgroundColor="#FF6B6B"
                                            TextColor="White"
                                            FontSize="12"
                                            Padding="8,4"
                                            CornerRadius="4"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.RemoveFromWishlistCommand}"
                                            CommandParameter="{Binding .}"
                                            Grid.Column="2"
                                            VerticalOptions="Center" />
                                    </Grid>
                                </Frame>
                            </SwipeView>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Empty state when no items -->
        <StackLayout 
            IsVisible="{Binding HasNoItems}"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Padding="40"
            Spacing="16">

            <Label 
                Text="💔"
                FontSize="64"
                HorizontalOptions="Center" />

            <Label 
                Text="Your wishlist is empty"
                FontSize="20"
                FontAttributes="Bold"
                TextColor="{DynamicResource TextColorPrimary}"
                HorizontalOptions="Center" />

            <Label 
                Text="Browse deals and add games you want to track!"
                FontSize="14"
                TextColor="{DynamicResource TextColorSecondary}"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center" />

            <Button 
                Text="Browse Deals"
                BackgroundColor="#4CAF50"
                TextColor="White"
                Clicked="OnBrowseDealsClicked"
                Margin="0,16,0,0" />
        </StackLayout>

        <!-- Loading indicator -->
        <ActivityIndicator 
            IsVisible="{Binding IsLoading}"
            IsRunning="{Binding IsLoading}"
            Color="{DynamicResource Primary}"
            VerticalOptions="Center"
            HorizontalOptions="Center" />
    </Grid>
</ContentPage>