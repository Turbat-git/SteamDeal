<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="SteamDeal.Views.WishlistPage"
    Title="Wishlist"
    BackgroundColor="{DynamicResource PageBackgroundColor}">

    <Shell.TitleView>
        <Grid ColumnDefinitions="Auto,*,Auto" Padding="10" VerticalOptions="Center">

            <BoxView WidthRequest="24" HeightRequest="1" Grid.Column="0" IsVisible="False" />

            <ImageButton
            Source="steam_logo.png"
            HeightRequest="28"
            BackgroundColor="Transparent"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Clicked="OnSteamLogoClicked"
            Grid.Column="1" />

            <ImageButton
            Source="user_icon.png"
            HeightRequest="28"
            WidthRequest="28"
            BackgroundColor="Transparent"
            HorizontalOptions="End"
            VerticalOptions="Center"
            Grid.Column="2" />
        </Grid>
    </Shell.TitleView>

    <VerticalStackLayout Padding="16">

		<Grid Padding="12" BackgroundColor="#232730" ColumnSpacing="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
        </Grid>
		
        <Label Text="Your Wishlist" 
               FontSize="24" 
               FontAttributes="Bold"
               TextColor="{DynamicResource TextColorPrimary}" 
               Margin="0,10" />

        <Label Text="(Wishlist feature coming soon...)" 
               FontSize="14"
               TextColor="Gray" />
    </VerticalStackLayout>
</ContentPage>